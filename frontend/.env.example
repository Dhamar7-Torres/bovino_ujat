# =============================================
# VARIABLES DE ENTORNO - FRONTEND REACT
# Sistema de Gestión de Bovinos
# =============================================

# Configuración del entorno de desarrollo
NODE_ENV=development
VITE_APP_NAME="Sistema de Gestión de Bovinos"
VITE_APP_VERSION=1.0.0

# =============================================
# API Y BACKEND
# =============================================

# URL del backend API (Express.js)
VITE_API_URL=http://localhost:5000
VITE_API_BASE_URL=http://localhost:5000/api
VITE_API_TIMEOUT=10000

# WebSocket para notificaciones en tiempo real
VITE_WS_URL=ws://localhost:5000

# =============================================
# AUTENTICACIÓN Y SEGURIDAD
# =============================================

# JWT para autenticación
VITE_JWT_SECRET=tu_jwt_secret_frontend_key
VITE_TOKEN_STORAGE_KEY=bovine_auth_token
VITE_REFRESH_TOKEN_KEY=bovine_refresh_token

# Configuración de sesión
VITE_SESSION_TIMEOUT=3600000
VITE_AUTO_LOGOUT_WARNING=300000

# =============================================
# MAPAS Y GEOLOCALIZACIÓN
# =============================================

# Mapbox para mapas avanzados (opcional)
VITE_MAPBOX_ACCESS_TOKEN=tu_mapbox_access_token

# OpenStreetMap/Leaflet configuración
VITE_OSM_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png
VITE_OSM_ATTRIBUTION="© OpenStreetMap contributors"

# Configuración de geolocalización
VITE_DEFAULT_LAT=17.9892
VITE_DEFAULT_LNG=-92.9475
VITE_DEFAULT_ZOOM=13
VITE_MAX_ZOOM=18
VITE_MIN_ZOOM=5

# Configuración para ubicaciones de rancho
VITE_RANCH_BOUNDS_ENABLED=true
VITE_LOCATION_PRECISION=6

# =============================================
# SPLINE 3D Y VISUALIZACIONES
# =============================================

# Spline 3D Models URLs
VITE_SPLINE_COW_MODEL=https://prod.spline.design/tu_cow_model_id/scene.splinecode
VITE_SPLINE_RANCH_MODEL=https://prod.spline.design/tu_ranch_model_id/scene.splinecode
VITE_SPLINE_DASHBOARD_MODEL=https://prod.spline.design/tu_dashboard_model_id/scene.splinecode

# Configuración de rendimiento para 3D
VITE_3D_QUALITY=medium
VITE_3D_AUTO_ROTATE=true
VITE_3D_CONTROLS_ENABLED=true

# =============================================
# ALMACENAMIENTO Y ARCHIVOS
# =============================================

# Cloudinary para imágenes (desde backend)
VITE_CLOUDINARY_CLOUD_NAME=tu_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=bovine_upload_preset

# Configuración de archivos
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
VITE_ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# URLs de almacenamiento
VITE_STORAGE_BASE_URL=http://localhost:5000/uploads
VITE_IMAGES_PATH=/images/bovines
VITE_DOCUMENTS_PATH=/documents

# =============================================
# NOTIFICACIONES Y COMUNICACIONES
# =============================================

# Push notifications (opcional)
VITE_VAPID_PUBLIC_KEY=tu_vapid_public_key

# Email de contacto para soporte
VITE_SUPPORT_EMAIL=soporte@bovino-ujat.com
VITE_CONTACT_PHONE=+52-993-123-4567

# Configuración de notificaciones
VITE_NOTIFICATIONS_ENABLED=true
VITE_NOTIFICATION_TIMEOUT=5000
VITE_MAX_NOTIFICATIONS=5

# =============================================
# CONFIGURACIÓN DE UI/UX
# =============================================

# Tema por defecto
VITE_DEFAULT_THEME=light
VITE_THEME_STORAGE_KEY=bovine_theme_preference

# Idioma por defecto
VITE_DEFAULT_LANGUAGE=es
VITE_LANGUAGE_STORAGE_KEY=bovine_language

# Configuración de animaciones
VITE_ANIMATIONS_ENABLED=true
VITE_REDUCED_MOTION=false
VITE_ANIMATION_DURATION=300

# Configuración de tablas y paginación
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# =============================================
# ANALYTICS Y MONITOREO
# =============================================

# Google Analytics (opcional)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry para error tracking (opcional)
VITE_SENTRY_DSN=https://tu_sentry_dsn@sentry.io/proyecto

# Configuración de logs
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOGS=true

# =============================================
# PWA Y OFFLINE
# =============================================

# Service Worker
VITE_SW_ENABLED=true
VITE_SW_UPDATE_INTERVAL=3600000

# Cache configuración
VITE_CACHE_VERSION=v1
VITE_CACHE_STRATEGIES=networkFirst

# =============================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================

# Hot Module Replacement
VITE_HMR_ENABLED=true
VITE_HMR_PORT=5173

# Debug y desarrollo
VITE_DEBUG_MODE=false
VITE_SHOW_PERFORMANCE_METRICS=false
VITE_MOCK_API=false

# Configuración de build
VITE_SOURCE_MAPS=false
VITE_DROP_CONSOLE=true

# =============================================
# CONFIGURACIÓN DE REPORTES
# =============================================

# Configuración de exportación
VITE_EXPORT_FORMATS=pdf,excel,csv
VITE_MAX_EXPORT_RECORDS=1000

# Configuración de gráficos
VITE_CHART_THEME=default
VITE_CHART_ANIMATIONS=true

# =============================================
# INTEGRACIONES EXTERNAS
# =============================================

# Clima y datos externos (opcional)
VITE_WEATHER_API_KEY=tu_weather_api_key
VITE_WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Configuración regional
VITE_TIMEZONE=America/Mexico_City
VITE_LOCALE=es-MX
VITE_CURRENCY=MXN

# =============================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================

# CORS y seguridad
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
VITE_SECURE_COOKIES=false

# Rate limiting (frontend)
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=900000

# =============================================
# CONFIGURACIÓN DE BACKUP Y SINCRONIZACIÓN
# =============================================

# Sincronización offline
VITE_SYNC_ENABLED=true
VITE_SYNC_INTERVAL=30000
VITE_OFFLINE_STORAGE_KEY=bovine_offline_data

# Backup automático
VITE_AUTO_BACKUP=true
VITE_BACKUP_INTERVAL=86400000

# =============================================
# NOTAS IMPORTANTES
# =============================================

# 1. Todas las variables que empiecen con VITE_ son accesibles en el frontend
# 2. NO incluir secretos o claves privadas aquí (solo públicas)
# 3. Las URLs deben ajustarse según el entorno (desarrollo, staging, producción)
# 4. Copiar este archivo como .env.local y personalizar los valores
# 5. Para producción, configurar las variables en el servicio de hosting