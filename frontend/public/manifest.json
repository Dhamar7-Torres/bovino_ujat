{
  "name": "Sistema de Gestión de Bovinos",
  "short_name": "Gestión Bovinos",
  "description": "Sistema integral para la gestión de bovinos, control de salud, producción lechera, reproducción y finanzas del rancho. Tecnología avanzada para ganaderos modernos.",
  "version": "1.0.0",
  "manifest_version": 3,
  
  "start_url": "/",
  "scope": "/",
  "id": "bovine-management-system",
  
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "orientation": "any",
  
  "theme_color": "#3B82F6",
  "background_color": "#F9FAFB",
  
  "categories": ["business", "productivity", "utilities"],
  "lang": "es",
  "dir": "ltr",
  
  "icons": [
    {
      "src": "/icons/manifest-icon-192.maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/manifest-icon-192.maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/manifest-icon-512.maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/manifest-icon-512.maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/favicon-16x16.png",
      "sizes": "16x16",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/favicon-32x32.png",
      "sizes": "32x32",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/favicon-48x48.png",
      "sizes": "48x48",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/mstile-150x150.png",
      "sizes": "150x150",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  
  "screenshots": [
    {
      "src": "/screenshots/dashboard-desktop.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg",
      "platform": "wide",
      "label": "Dashboard principal del sistema de gestión de bovinos en escritorio"
    },
    {
      "src": "/screenshots/bovines-mobile.jpg",
      "sizes": "390x844",
      "type": "image/jpeg",
      "platform": "narrow",
      "label": "Lista de bovinos en dispositivo móvil"
    },
    {
      "src": "/screenshots/health-records-desktop.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg",
      "platform": "wide",
      "label": "Registros de salud y vacunación en escritorio"
    },
    {
      "src": "/screenshots/production-mobile.jpg",
      "sizes": "390x844",
      "type": "image/jpeg",
      "platform": "narrow",
      "label": "Seguimiento de producción lechera en móvil"
    },
    {
      "src": "/screenshots/maps-desktop.jpg",
      "sizes": "1280x720",
      "type": "image/jpeg",
      "platform": "wide",
      "label": "Geolocalización y mapas del rancho en escritorio"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Inicio",
      "description": "Acceso rápido al dashboard principal",
      "url": "/",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Bovinos",
      "short_name": "Ganado",
      "description": "Gestión de bovinos y ganado",
      "url": "/bovines",
      "icons": [
        {
          "src": "/icons/shortcut-bovines.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Salud",
      "short_name": "Veterinaria",
      "description": "Registros de salud y vacunación",
      "url": "/health",
      "icons": [
        {
          "src": "/icons/shortcut-health.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Producción",
      "short_name": "Leche",
      "description": "Control de producción lechera",
      "url": "/production",
      "icons": [
        {
          "src": "/icons/shortcut-production.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Calendario",
      "short_name": "Eventos",
      "description": "Calendario de eventos y tareas",
      "url": "/calendar",
      "icons": [
        {
          "src": "/icons/shortcut-calendar.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://bovinemanagement.com/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+bovine",
      "url": "/bovines/%s"
    },
    {
      "protocol": "web+health",
      "url": "/health/%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/json": [".json"]
      }
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/csv", "application/json"]
        }
      ]
    }
  },
  
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "handle_links": "preferred",
  
  "capture_links": "existing-client-navigate",
  
  "features": [
    "cross-origin-isolated"
  ],
  
  "permissions": [
    "geolocation",
    "notifications",
    "persistent-storage",
    "camera",
    "microphone"
  ],
  
  "custom": {
    "bovine_system_version": "1.0.0",
    "supported_languages": ["es", "en"],
    "features": {
      "offline_support": true,
      "geolocation": true,
      "push_notifications": true,
      "file_upload": true,
      "camera_access": true,
      "background_sync": true,
      "3d_models": true,
      "maps_integration": true,
      "real_time_updates": true,
      "data_export": true,
      "multi_ranch_support": true,
      "veterinary_records": true,
      "production_tracking": true,
      "financial_management": true,
      "breeding_management": true,
      "inventory_control": true,
      "automated_reports": true
    },
    "supported_devices": {
      "mobile": true,
      "tablet": true,
      "desktop": true,
      "smart_tv": false,
      "automotive": false
    },
    "minimum_requirements": {
      "ram_mb": 512,
      "storage_mb": 100,
      "network": "2g",
      "javascript": true,
      "webgl": true,
      "geolocation_api": true,
      "camera_api": true
    },
    "ranch_management": {
      "max_bovines": 10000,
      "max_users": 50,
      "max_ranches": 5,
      "storage_limit_gb": 10,
      "offline_days": 30,
      "sync_frequency_minutes": 5
    }
  }
}